@model Project

@{
    ViewData["Title"] = "项目";
}

<div style="max-width: 800px; text-align: center;">
    @if(Model.Id > 0){
        <h4>编辑项目: @Html.DisplayFor(m=>m.Name)</h4>
    }else{
        <h4>创建新的项目<span class="text-danger">*</span></h4>
    }
</div>

<form method="POST" style="max-width:800px;">
    @Html.HiddenFor(m=>m.Id)
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-2 col-form-label col-form-label-sm"></label>
        <div class="col-10">
            <input asp-for="Name" class="form-control form-control-sm">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProjectItem" class="col-2 col-form-label col-form-label-sm"></label>
        <div class="col-10">
            <input asp-for="ProjectItem" class="form-control form-control-sm">
            <span asp-validation-for="ProjectItem" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ContractPart" class="col-2 col-form-label col-form-label-sm"></label>
        <div class="col-10">
            <input asp-for="ContractPart" class="form-control form-control-sm">
            <span asp-validation-for="ContractPart" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ConstructionUnit" class="col-2 col-form-label col-form-label-sm"></label>
        <div class="col-10">
            <input asp-for="ConstructionUnit" class="form-control form-control-sm">
            <span asp-validation-for="ConstructionUnit" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Builder" class="col-2 col-form-label col-form-label-sm"></label>
        <div class="col-10">
            <input asp-for="Builder" class="form-control form-control-sm">
            <span asp-validation-for="Builder" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Supervisor" class="col-2 col-form-label col-form-label-sm"></label>
        <div class="col-10">
            <input asp-for="Supervisor" class="form-control form-control-sm">
            <span asp-validation-for="Supervisor" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CreatedOn" class="col-2 col-form-label col-form-label-sm"></label>
        <div class="col-10">
            <input asp-for="CreatedOn" class="form-control form-control-sm">
            <span asp-validation-for="CreatedOn" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-10">
            <div class="custom-control custom-checkbox">
                <input asp-for="IsActive" class="custom-control-input">
                <label asp-for="IsActive" class="custom-control-label"></label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">

        </div>
        <div class="col-5">
            <input type="submit" class="btn btn-primary" value="提交保存">
        </div>
        <div class="col-5">
            <a class="float-right btn btn-link" asp-action="Index">返回项目列表</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}